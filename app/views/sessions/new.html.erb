<h1>Sign In</h1>

<form action="<%= session_url %>" method="POST">
  <%= form_auth_token %>

  <label for="user_username">Username</label>
  <input
    id="user_username"
    type="text"
    name="user[username]"
    value="<%= @user.username %>">

  <label for="user_password">Password</label>
  <input
    id="user_password"
    type="password"
    name="user[password]">

  <button>Sign In</button>
</form>
